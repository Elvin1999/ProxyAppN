<Window x:Class="ProxyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProxyApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="8*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" TextWrapping="Wrap" FontSize="26">
                
            </TextBlock>
            <StackPanel Grid.Row="1" Orientation="Horizontal" >
                <TextBox Width="240"  FontSize="26">
                
            </TextBox>
                <Button Content="Submit" FontSize="16" FontWeight="ExtraBlack" ></Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <ListBox Background="Aqua" FontSize="30" HorizontalContentAlignment="Center">
                
            </ListBox>
        </Grid>
    </Grid>
</Window>
